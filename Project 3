/* Task: Ввести целые числа как аргументы командной строки, 
подсчитать их суммы (произведения) и вывести результат на консоль.*/

package com.company;
import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        System.out.print("Введите целые числа через пробел или любой другой символ, не являющийся цифрой: ");
        Scanner scan = new Scanner(System.in);
        String numbers = scan.nextLine(); //отсканированная строка чисел
        //выделим из строки все числа, чтобы программа смогла с ними работать
        Integer sum = 0; //переменная для суммы
        Integer multiplication = 1; //переменная для произведения
        String numb = ""; //переменная для временного хранения извлекаемого числа
        char ch; //переменная для временного хранения извлекаемого символа
        int i; //переменная для хранения индекса извлекаемого символа
        //пока в строке есть символы, считываем цыфры и формируем из них такие же числа, которые вводил пользователь; лишние символы пропускаем
        for (i=0; i < numbers.length();) {
            ch = numbers.charAt(i); //считываем символ
            //если символ - цифра, то учитываем ее, чтобы потом получить число, и переходим к следующему символу, завершая данную итерацию
            if (ch == '0' || ch == '1' || ch == '2' || ch == '3' || ch == '4' || ch == '5' || ch == '6' || ch == '7' || ch == '8' || ch == '9') {
                numb += ch;
                i++; //переход к следующему символу
                //пока не закончится символы в строке
                if (i < numbers.length()) {
                    continue; //снова отправляемся считывать символ, но уже с другим индексом
                }
            }
            //если символ - не цифра, то во временную переменную ничего не добавляем и переходим к следующему символу
            if (numb.equals("")) {
                i++; //переход к следующему символу
            }
            //для числа, которое уже полностью сформировано из считанных цифр
            else {
                sum += Integer.parseInt(numb); //считаем сумму
                multiplication *= Integer.parseInt(numb); //считаем произведение
                numb = ""; //обнуляем временную переменную для хранения числа из цифр
                i++; //переход к следующему символу
            }
        }
        System.out.println("sum = " + sum + "\nmultiplication = " + multiplication); //вывод конечной суммы и произведения
    }
}
